/*
  * TEST DATA Nextflow config file for updating references 
  * update 
*/


manifest {
  author = 'Alison Morse'
  description = 'TEST upd genomes'
  mainScript = 'NF_updateGenome.nf'
  nextflowVersion = '20.04.1'
}


env {

// Directories
PROJ    =   "/ufrc/mcintyre/share/BASE_mclab/galaxy"
ROZ     =   "${PROJ}/rozUPD"
VCF     =   "${PROJ}/vcf_by_genotype"
UREF    =   "${PROJ}/updated_genomes_vcfConsensus"
INPUT  =   "${PROJ}/test_input"

// Files
FASTA   =   "${PROJ}/test_input/dmel_r551_chromosome_2R_X.fasta"
DESIGN_FILE  =  "${PROJ}/test_input/df_list_G2_VCF_split.csv"

}


// process default configurations       
process {
    executor = 'slurm'
    clusterOptions = '-o /ufrc/mcintyre/share/BASE_mclab/galaxy/test_scripts/SLURM_LOGS/upd-%A.out --job-name=upd --account=mcintyre --qos=mcintyre-b'
    memory = 10.GB
    cpus = 1
    time = '24h'
}

// process specific configurations
process {
    withName: 'updGenomes' {
    executor = 'slurm'
    clusterOptions = '-o /ufrc/mcintyre/share/BASE_mclab/galaxy/test_scripts/SLURM_LOGS/updVCF-%A.out --job-name=updVCF --account=mcintyre --qos=mcintyre-b'
    memory = 32.GB
    cpus = 8
    time = '24h'
    }
}

