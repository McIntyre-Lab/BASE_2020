<tool id="base_remove_nonoverlapping_reads" name="Remove reads that do not overlap with a feature for BASE"  version="0.1.0">
    <description>with awk</description>
    <macros>
        <import>../macros.xml</import>
    </macros>
    <requirements>
    </requirements>
    <command>
<![CDATA[ 
        awk -v OFS='	' '$4 !="."' '$BEDINT' > '$BED3'
]]>
    </command>
    <inputs>
        <param name="BEDINT" type="data" format="tabular" label="Output from bedtools intersect" />
    </inputs>
    <outputs>
        <data name="BED3" format="tabular" type="data" label="${tool.name} on ${on_string} BED3 output" />
    </outputs>
    <help><![CDATA[
    **What it does**
    Drop reads that do not overlap.
    ]]></help>
</tool>
